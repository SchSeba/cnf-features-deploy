{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "automergeStrategy": "rebase",
    "automergeType": "pr",
    "dockerfile": {
        "autoApprove": true,
        "automerge": true,
        "enabled": true,
        "fileMatch": [
            "\\.conf$"
        ],
        "ignoreTests": false,
        "platformAutomerge": true,
        "schedule": [
            "at any time"
        ]
    },
    "gomod": {
        "enabled": false
    },
    "pruneBranchAfterAutomerge": true,
    "tekton": {
        "autoApprove": true,
        "automerge": true,
        "enabled": true,
        "fileMatch": [
            "\\.yaml$",
            "\\.yml$"
        ],
        "ignoreTests": false,
        "includePaths": [
            ".tekton/**"
        ],
        "platformAutomerge": true,
        "schedule": [
            "at any time"
        ]
    },
    "git-submodules": {
        "schedule": [
            "at any time"
        ]
    }
}